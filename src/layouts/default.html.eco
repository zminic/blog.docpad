<html>
<head>
    <title><%= @getPreparedTitle() %></title>
	<meta charset="UTF-8">
	<meta name="description" content="<%= @getPreparedDescription() %>">
	<meta name="keywords" content="<%= @getPreparedKeywords() %>">
	<meta name="author" content="Zeljko Minic">
	<meta name="viewport" content="width=device-width, initial-scale=1">
    <%- @getBlock("meta").toHTML() %>
	<link href='http://fonts.googleapis.com/css?family=Arimo' rel='stylesheet' type='text/css'>
	<link href='http://fonts.googleapis.com/css?family=Oswald' rel='stylesheet' type='text/css'>
    <%- @getBlock("styles").add(["/styles/prism.css", "/styles/style.css", "/styles/style-desktop.css"]).toHTML() %>
</head>
<body>
	<div class="siteContainer">

	    <div class="header">
			
			<ul class="menu">
			<% for page in @getCollection("pages").toJSON(): %>
				<li class="<%= if page.id is @document.id then 'active' else 'inactive' %>">
					<a href="<%= page.url %>">
						<%= page.title %>
					</a>
				</li>
			<% end %>
			</ul>
			
			<div class="logo-container">
				<div class="logo">
					<span>&lt;</span>
					<span>
						the<span class="accent">realm</span>of<span class="accent">code</span>
					</span>
					<span>/&gt;</span>
				</div>
			</div>
		
		    

			<div class="social-icons">
				<a href="https://twitter.com/zeljko_minic" target="_blank" title="Twitter">
					<img src="/images/twitter.png" />
				</a>&nbsp;
				<a href="http://rs.linkedin.com/in/zminic" target="_blank" title="LinkedIn">
					<img src="/images/linkedin.png" />
				</a>
		    </div>
		</div>

		<div class="content">
			<%- @content %>
		</div>
	</div>
	
    <%- @getBlock("scripts").add(["/scripts/prism.js", "/scripts/google-analytics.js"]).toHTML() %>
</body>
</html>