header-font = 'Oswald', sans-serif
header-color = #000
menu-color = #000
common-border-color = #eee
link-color = #7da7d9

a
	text-decoration: none
	color: link-color

img
	&.centered
		display: block
		margin-left: auto
		margin-right: auto
		
.navbar
	margin-bottom: 30px
	
.navbar-default
	.navbar-brand
		color: menu-color
	.navbar-nav
		>li
			&.active
				>a
					color: menu-color
			>a
				color: menu-color

// set header styles
for n, i in 1..5
	h{n}
		font-family: header-font
		padding-bottom: 10px
		color: header-color
		a
			color: header-color
			text-decoration: none

.post
	&.inline
		margin-bottom: 10px
		border-bottom: 1px solid common-border-color
		.body img
				max-height: 100px
				max-width: 50%
		.info
			color: #999;
			font-size: 0.9em;

	li
		padding: 5px
	img[align]
		padding: 0 15px 15px 0
	.comments
		margin-top: 30px
	blockquote
		font-style: italic

.pager
	text-align: left